        @if (Model.ArmeItems != null && Model.ArmeItems.Count > 0)
        {
            @Html.DropDownListFor(model => model.IdArme, Model.ArmeItems, "Aucun", new {htmlAttributes = new {@class = "form-control"}})
            @Html.ValidationMessageFor(model => model.IdsArtMartial, "", new {@class = "text-danger"})
        }
        else
        {
            @Html.DisplayFor(model => model.Samourai.Arme.Nom)
        }
    </div>
</div>

