@model AspNet_TP02_Module05.Models.PizzaCreateEditVM



<h4>Pizza</h4>
<hr />


@if (Model.Pizza != null)
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Pizza.Id)
}
else
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

}

<div class="form-group">
    @Html.LabelFor(model => model.Pizza.Nom, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @if (Model.Pate != null && Model.Pate.Count > 0)
        {
            @Html.EditorFor(model => model.Pizza.Nom, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Pizza, "", new { @class = "text-danger" })
        }
        else
        {
            @Html.DisplayFor(model => model.Pizza.Nom)
        }
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Pizza.Pate, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @if (Model.Pate != null && Model.Pate.Count > 0)
        {
            @Html.DropDownListFor(model => model.IdPate, Model.Pate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IdPate, "", new { @class = "text-danger" })
        }
        else
        {
            @Html.DisplayFor(model => model.Pizza.Pate.Nom)
        }

    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Pizza.Ingredients, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @if (Model.Ingredients != null && Model.Ingredients.Count > 0)
        {
            @Html.ListBoxFor(model => model.IdIngredients, Model.Ingredients, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.IdIngredients, "", new { @class = "text-danger" })
        }
        else
        {
            @Html.ListBoxFor(model => model.IdIngredients, Model.Pizza.Ingredients.Select(x => new SelectListItem() { Text = x.Nom }), new { @class = "form-control", @disabled = "disabled" })
        }
    </div>
</div>